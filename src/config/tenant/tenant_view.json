{
  "name": "tenant",
  "type": "TablePage",
  "created": {
    "actions": ["fetch"]
  },
  "card": {
    "title": "租户管理",
    "buttons": [
      {
        "label": "新建",
        "action": "showCreateDialog",
        "type": "primary"
      }
    ]
  },
  "table":{
    "columns": [
      { "prop": "id"},
      { "prop": "uuid"},
      { "prop": "name"},
      { "prop": "slug"},
      {
        "prop": "action",
        "width": 250,
        "label": "操作",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "编辑",
              "type": "primary",
              "action": "showUpdateDialog"
            },
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageSize": 20,
    "total": 0,
    "background": "",
    "action": "fetch"
  },
  "dialogs": {
    "create": {
      "title": "新建租户",
      "items": [
        "name",
        "slug"
      ],
      "actions": [
        {
          "label": "确定",
          "action": "create",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "data": {}
    },
    "update": {
      "title": "编辑租户",
      "items": ["name", "slug"],
      "actions": [
        {
          "label": "确定",
          "action": "edit",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "data": {}
    }
  },
  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "request": {},
          "url": "/api/v1/tenant/",
          "method": "GET",
          "client_config": {
            "table.data": "results"
          }
        }
      ]
    },
    "showCreateDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": true
          }
        }
      ]
    },
    "showUpdateDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "/api/v1/tenant/<id>/",
          "client_config": {
            "dialogs.update.data": ".",
            "dialogs.update.items[prop=name].state.value": "name",
            "dialogs.update.items[prop=slug].state.value": "slug"
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "create": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "POST",
          "url": "/api/v1/tenant/",
          "request": {
            "name": "dialogs.create.items[prop=name].state.value",
            "slug": "dialogs.create.items[prop=slug].state.value"
          }
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": false
          }
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.data": {},
            "dialogs.create.items[prop=name].state.value": "",
            "dialogs.create.items[prop=slug].state.value": ""
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "edit": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "PATCH",
          "url": "/api/v1/tenant/<id>/",
          "request": {
            "name": "dialogs.update.items[prop=name].state.value",
            "slug": "dialogs.update.items[prop=slug].state.value"
          }
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": false
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "delete": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "DELETE",
          "url": "/api/v1/tenant/<id>/"
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    }
  }
}